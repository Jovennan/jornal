<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for(noticia, :html => { :multipart => true }) do |f| %>
      <% if noticia.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(noticia.errors.count, "error") %> prohibited this noticia from being saved:</h2>

          <ul>
          <% noticia.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :autor %>
        <%= f.text_field :autor, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :titulo %>
        <%= f.text_field :titulo, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :conteudo %>
        <%= f.text_area :conteudo, class: 'form-control', rows: '5' %>
      </div>

      <div class="form-group">
        <%= f.label :imagem %>
        <%= f.file_field :imagem, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
